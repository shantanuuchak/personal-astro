---
import type { LanguageSelectionType } from "@utils/types";
import tracklist from "@data/tracklist";
import MusicItem from "./MusicItem.astro";

interface Props {
  lang: LanguageSelectionType;
}

const { lang } = Astro.props;
---

<ul class="mid-col">
  {
    tracklist.map((track, index) => (
      <MusicItem lang={lang} track={track} index={index} />
    ))
  }
</ul>

<style>
  ul {
    margin-top: var(--space-80);
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    padding: 0 var(--side-padding);
    gap: var(--space-32);
  }

  @media only screen and (max-width: 78.5em /* 1256px */) {
    ul {
      max-width: 110rem;
      grid-template-columns: repeat(3, 1fr);
      row-gap: var(--space-48);
      justify-self: center;
    }
  }

  @media only screen and (max-width: 38em /* 608px */) {
    ul {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media only screen and (max-width: 25em /* 400px */) {
    ul {
      grid-template-columns: 1fr;
    }
  }
</style>
