---
import type { Course } from "../../data/projects";

interface Props {
  isEn: boolean;
  course: Course;
}

const { isEn, course } = Astro.props;
---

{
  isEn && (
    <p>
      The project was created as part of the{" "}
      <a href={course.url} title={course.title} hreflang="en">
        {course.school}
      </a>{" "}
      course designed by {course.teacher}.
    </p>
  )
}

{
  !isEn && (
    <p>
      Projekt powsta≈Ç w ramach kursu{" "}
      <a href={course.url} title={course.title} hreflang="en">
        {course.school}
      </a>{" "}
      zaprojektowanego przez {course.teacher.split(" ")[0]}a{" "}
      {course.teacher.split(" ")[1]}a.
    </p>
  )
}

<style>
  p {
    margin-top: var(--space-12);
    font-size: var(--font-small);
    font-family: var(--font-sans);
    color: var(--c11darker);
  }

  a:where(:link, :visited) {
    color: var(--c8);
  }
</style>
