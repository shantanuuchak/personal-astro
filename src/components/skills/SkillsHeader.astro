---
import type { Link } from "@utils/types";
import Skills from "./Skills.astro";

interface Props {
  link: Link;
}

const { link } = Astro.props;
---

<div class="skills-section mid-col">
  <div class="header-container">
    <div class="header-fill">
      <div class="header">
        <div class="icon-container">
          <link.icon size="100%" weight="duotone" />
        </div>
        <p class="heading">
          <span>02</span><span>{link.heading}</span>
        </p>
        <h2 class="subheading">{link.subheading}</h2>
      </div>
    </div>
  </div>

  <div class="filler">
    <slot />
  </div>

  <Skills />
</div>

<style>
  .skills-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: max-content 1fr;
    padding: 0 var(--side-padding);
    gap: var(--space-32);
    align-items: start;
  }

  .header-container {
    grid-row: 1 / 3;
    padding: var(--space-96);
  }

  .header {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .icon-container {
    height: var(--space-80);
    aspect-ratio: 1/1;
    color: var(--white);
    background: var(--c8);
    line-height: 1;
    padding: var(--space-12);
    border-radius: var(--radius-s);
    grid-column: 3 / 4;
    justify-self: end;
    position: relative;
  }

  .heading {
    grid-column: 1 / 3;
    grid-row: 1 / 2;
    text-transform: uppercase;
    font-weight: 600;
    color: var(--c6dark);
  }

  .heading span:first-child {
    display: block;
    font-size: var(--font-5);
    color: var(--c6dark);
    font-weight: 700;
  }

  .heading span:last-child {
    letter-spacing: 0.8rem;
  }

  .subheading {
    color: var(--c8);
    font-size: var(--font-3);
    grid-column: 1 / -1;
    margin-top: var(--space-24);
    text-align: right;
  }

  .filler {
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: var(--space-96);
    padding-bottom: 0;
    color: var(--c8dark);
  }

  @media only screen and (max-width: 85.5em /* 1368px */) {
    .skills-section {
      column-gap: 0;
    }
  }

  @media only screen and (max-width: 78.5em /* 1256px */) {
    .skills-section {
      row-gap: var(--space-12);
    }

    .header-container {
      padding: var(--space-32) var(--space-64);
    }

    .filler {
      padding: var(--space-32) var(--space-64);
      padding-bottom: 0;
    }

    .subheading {
      font-size: var(--font-4);
    }
  }

  @media only screen and (max-width: 71em /* 1136px */) {
    .header-container {
      padding: var(--space-32);
      max-width: 50ch;
    }

    .filler {
      padding: var(--space-32);
      padding-bottom: 0;
    }

    .heading span:last-child {
      font-size: var(--font-normal);
    }
  }

  @media only screen and (max-width: 62.5em /* 1000px */) {
    .header-container {
      padding: var(--space-8) var(--space-32);
      padding-top: var(--space-48);
    }

    .filler {
      padding: var(--space-8) var(--space-32);
      padding-top: var(--space-48);
      padding-bottom: 0;
    }
  }

  @media only screen and (max-width: 56em /* 896px */) {
    .skills-section {
      grid-template-columns: 3fr 4fr;
    }
  }

  @media only screen and (max-width: 45.5em /* 728px */) {
    .skills-section {
      grid-template-columns: 1fr;
      max-width: 69rem;
      justify-self: center;
    }

    .header-container {
      padding: var(--space-24) var(--space-32);
      padding-top: var(--space-48);
      max-width: 100%;
    }

    .filler {
      padding: var(--space-8) var(--space-32);
      justify-self: center;
    }

    .subheading {
      text-align: left;
      justify-self: start;
      max-width: 100%;
    }
  }

  @media only screen and (max-width: 32.25em /* 516px */) {
    .header-container {
      padding: 0;
      padding-bottom: var(--space-24);
      padding-top: var(--space-80);
    }

    .filler {
      padding: 0;
    }
  }
</style>
